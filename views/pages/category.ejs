<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <title><%= title %></title>
    <style>
      li {
        list-style: none;
      }
    </style>
  </head>
  <body>
    <%- include('../commonPages/header.ejs') %>
    <div class="container mx-auto border border-1 w-25 p-4 mt-5 text-center">
      <h4 class="mb-4">Add Category</h4>
      <form action="/category/add" method="post">
        <input
          type="text"
          class="mb-4 w-100 p-1"
          placeholder="Enter category"
          name="name"
        />
        <button type="submit" name="submit" class="btn btn-primary">Add</button>
      </form>
    </div>

    <div class="container">
      <table class="table">
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% category.forEach((data, index) => { %>
          <tr>
            <td><%=index+1 %></td>
            <td><%=data.name %></td>
            <td>
              <a href="/category/edit/<%= data.id %>" class="btn btn-success">Edit</a>
              <a href="/category/delete/<%= data.id %>" class="btn btn-danger">Delete</a>
            </td>
          </tr>
          <% })%>
        </tbody>
      </table>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
