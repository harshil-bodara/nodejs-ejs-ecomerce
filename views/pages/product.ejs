<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <style>
      li {
        list-style: none;
        cursor: pointer;
      }
    </style>
    <title><%= title %></title>
  </head>

  <body>
    <header><%- include('../commonPages/header.ejs')%></header>

    <div class="container mx-auto border border-1 w-25 p-4 mt-5">
      <h4 class="text-center">Add Product</h4>
      <form action="/product/add" method="post" enctype="multipart/form-data">
        <input
          type="text"
          class="mb-4 mt-4 w-100 p-1"
          placeholder="Enter product name"
          name="name"
        />
        <input
          type="text"
          class="mb-4 w-100 p-1"
          placeholder="Enter description"
          name="description"
        />

        <select name="category" class="mb-4 p-2">
          <option>Choose category</option>
          Category <% category.forEach((data)=> { %>
          <option value="<%=data.id %>" class="ms-3 mb-3">
            <%= data.name %>
          </option>
          <% })%>
        </select>

        <input
          type="number"
          class="mb-4 w-100 p-1"
          placeholder="Enter price"
          name="price"
        />

        <input type="file" class="mb-2" name="image" />
        <br /><br />
        <button type="submit" name="submit" class="btn btn-primary">Add</button>
      </form>
    </div>

    <div class="container">
      <table class="table">
        <thead>
          <tr>
            <th>No</th>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Price</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% product.forEach((data, index)=> { %>
          <tr>
            <td><%=index+1 %></td>
            <td><img src="/<%=data.image %>" width="50px" alt="" /></td>
            <td><%=data.name %></td>
            <td><%=data.description %></td>
            <td><%=data.category %></td>
            <td><%=data.price %></td>
            <td>
              <a href="/product/edit/<%= data.id %>" class="btn btn-success"
                >Edit</a
              >
              <a href="/product/delete/<%= data.id %>" class="btn btn-danger"
                >Delete</a
              >
            </td>
          </tr>
          <% })%>
        </tbody>
      </table>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
